<?xml version="1.0" encoding="UTF-8"?>
<content-unit-test xmlns="http://decima.nist.gov/xml/unit-test">
  <requirement>126</requirement>
  <description>OVAL results should map to the proper XCCDF results (see Table 21 in 800-126r2).
    This test checks for possible elements that can determine the OVAL definition class type being mapped.
    This test removes the @class from all three possible positions so this requirement 126-2 should fail.
  </description>
  <template xmlns="http://csrc.nist.gov/ns/decima/template/1.0"
  xmlns:ds="http://scap.nist.gov/schema/scap/source/1.2"
  xmlns:oval-res="http://oval.mitre.org/XMLSchema/oval-results-5"
  xmlns:oval-def="http://oval.mitre.org/XMLSchema/oval-definitions-5"
  xmlns:arf="http://scap.nist.gov/schema/asset-reporting-format/1.1"
  xmlns:xccdf="http://checklists.nist.gov/xccdf/1.2"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" template="classpath:scap-1.2/templates/result-base.xml">

    <delete xpath="//arf:report-request//oval-def:definition/@class" />
    <delete xpath="//oval-res:oval_results/oval-def:oval_definitions//oval-def:definition/@class" />
    <delete xpath="//oval-res:oval_results//oval-res:results//oval-res:definition/@class" />

  </template>
  <assessments>
    <schematron-assessment ruleset="classpath:rules/scap/result-data-stream-1.2.1.sch" handler-class="gov.nist.scap.validation.requirements.decima.SCAPSchematronHandler"/>
  </assessments>
  <assertions>
    <assert-derived-requirement requirement-id="RES-126-2" result="FAIL" />
    <!-- 126-1 is also expected to fail since it relies on these same locations -->
    <assert-derived-requirement requirement-id="RES-126-1" result="FAIL" />
    <assert-remaining quantifier="ALL" result="PASS" />
  </assertions>
</content-unit-test>
