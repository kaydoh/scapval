<?xml version="1.0" encoding="UTF-8"?>
<content-unit-test xmlns="http://decima.nist.gov/xml/unit-test">
  <requirement>118</requirement>
  <description>A description is needed.</description>
  <template xmlns="http://csrc.nist.gov/ns/decima/template/1.0"
  xmlns:cpe-dict="http://cpe.mitre.org/dictionary/2.0"
  xmlns:ds="http://scap.nist.gov/schema/scap/source/1.2"
  xmlns:oval-def="http://oval.mitre.org/XMLSchema/oval-definitions-5"
  xmlns:xccdf="http://checklists.nist.gov/xccdf/1.2"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" template="classpath:scap-1.2/templates/configuration-single-data-stream-base.xml">
    <modify-attribute value="oval-def" xpath="//xccdf:check/@system" />
  </template>
  <assessments>
    <schematron-assessment ruleset="classpath:rules/scap/source-data-stream-1.2.sch" handler-class="gov.nist.scap.validation.requirements.decima.SCAPSchematronHandler">
      <parameter name="datafiles_directory">classpath:data_feeds</parameter>
    </schematron-assessment>
  </assessments>
  <assertions>
    <assert-derived-requirement requirement-id="SRC-118-1" result="FAIL" />
    <!-- Also expect 351-1, 262-1, and 169-2 to fail due to the @system modification for this test -->
    <assert-derived-requirement requirement-id="SRC-351-1" result="FAIL" />
    <assert-derived-requirement requirement-id="SRC-262-1" result="FAIL" />
    <assert-derived-requirement requirement-id="SRC-169-2" result="FAIL" />
    <assert-remaining quantifier="ALL" result="PASS" />
  </assertions>
</content-unit-test>
