<?xml version="1.0" encoding="UTF-8"?>
<content-unit-test xmlns="http://decima.nist.gov/xml/unit-test">
  <requirement>331</requirement>
  <description>If an xccdf:Rule has an xccdf:ident with a CPE and that rule reference an OVAL definition, the definition SHALL have @class 'inventory'.</description>
  <template xmlns="http://csrc.nist.gov/ns/decima/template/1.0"
  xmlns:ds="http://scap.nist.gov/schema/scap/source/1.2"
  xmlns:oval-def="http://oval.mitre.org/XMLSchema/oval-definitions-5"
  xmlns:xccdf="http://checklists.nist.gov/xccdf/1.2"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" template="classpath:scap-1.2/templates/configuration-single-data-stream-base.xml">
    
    <replace xpath="//xccdf:ident[@system = 'http://cce.mitre.org']">
      <xccdf:ident system="http://cpe.mitre.org">cpe</xccdf:ident>
    </replace>
    
    <modify-attribute value="inventory" xpath="//oval-def:definition/@class" />
    
  </template>
  <assessments>
    <schematron-assessment ruleset="classpath:rules/scap/source-data-stream-1.2.sch" handler-class="gov.nist.scap.validation.requirements.decima.SCAPSchematronHandler">
      <parameter name="datafiles_directory">classpath:data_feeds</parameter>
    </schematron-assessment>
  </assessments>
  <assertions>
    <assert-derived-requirement requirement-id="SRC-331-3" result="PASS" />
    <!-- This test just swaps the template values with inventory to achieve its
         check of 331-3. This simple check breaks other SCAP rules, but its expected in this case -->
    <assert-derived-requirement requirement-id="SRC-169-1" result="FAIL" />
    <assert-derived-requirement requirement-id="SRC-236-2" result="FAIL" />
    <assert-derived-requirement requirement-id="SRC-251-2" result="FAIL" />
    <assert-derived-requirement requirement-id="SRC-262-1" result="FAIL" />
    <assert-derived-requirement requirement-id="SRC-209-1" result="FAIL" />
    <assert-remaining quantifier="ALL" result="PASS" />
  </assertions>
</content-unit-test>
