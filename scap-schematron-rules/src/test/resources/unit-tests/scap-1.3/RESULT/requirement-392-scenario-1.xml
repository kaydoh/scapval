<?xml version="1.0" encoding="UTF-8"?>
<content-unit-test xmlns="http://decima.nist.gov/xml/unit-test">
  <requirement>392</requirement>
  <description>The @role, @severity, and @weight attributes of the &lt;xccdf:rule-result&gt; element SHALL be provided to indicate their values used during assessment.
  </description>

  <template xmlns="http://csrc.nist.gov/ns/decima/template/1.0"
            xmlns:cpe-dict="http://cpe.mitre.org/dictionary/2.0"
            xmlns:ds="http://scap.nist.gov/schema/scap/source/1.2"
            xmlns:oval-def="http://oval.mitre.org/XMLSchema/oval-definitions-5"
            xmlns:xccdf="http://checklists.nist.gov/xccdf/1.2"
            xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            template="classpath:scap-1.3/templates/result-base.xml" />
  <assessments>
    <schematron-assessment ruleset="classpath:rules/scap/result-data-stream-1.3.sch" handler-class="gov.nist.scap.validation.requirements.decima.SCAPSchematronHandler">
      <parameter name="datafiles_directory">classpath:data_feeds</parameter>
    </schematron-assessment>
  </assessments>
  <assertions>
    <assert-derived-requirement requirement-id="RES-392-1" result="PASS" />
    <assert-remaining quantifier="ALL" result="PASS" />
  </assertions>
</content-unit-test>
