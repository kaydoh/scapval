<?xml version="1.0" encoding="UTF-8"?>
<content-unit-test xmlns="http://decima.nist.gov/xml/unit-test">
  <requirement>391</requirement>
  <description>If the &lt;xccdf:Rule&gt; element under evaluation is selected and its @role attribute is set to "unchecked", then the rule result SHALL be set to "notchecked".
    If the &lt;xccdf:Rule&gt; element under evaluation is selected and its @role attribute is set to "unscored", then the rule result SHALL be set to "informational"

    This test sets a &lt;xccdf:Rule&gt; @role to "unchecked" and @selected to "true" and the rule-result to "notchecked".
    This test should pass
  </description>

  <template xmlns="http://csrc.nist.gov/ns/decima/template/1.0"
            xmlns:cpe-dict="http://cpe.mitre.org/dictionary/2.0"
            xmlns:ds="http://scap.nist.gov/schema/scap/source/1.2"
            xmlns:oval-def="http://oval.mitre.org/XMLSchema/oval-definitions-5"
            xmlns:xccdf="http://checklists.nist.gov/xccdf/1.2"
            xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            template="classpath:scap-1.3/templates/result-base.xml">
    <modify-attribute xpath="//xccdf:Rule[@id='xccdf_gov.nist_rule_test_rule5']/@role" value="unchecked" />
          <modify-attribute xpath="//xccdf:Rule[@id='xccdf_gov.nist_rule_test_rule5']/@selected" value="true" />
          <replace xpath="//xccdf:rule-result[@idref='xccdf_gov.nist_rule_test_rule5']/xccdf:result" >
            <xccdf:result>notchecked</xccdf:result>
          </replace>
  </template>
  <assessments>
    <schematron-assessment ruleset="classpath:rules/scap/result-data-stream-1.3.sch" handler-class="gov.nist.scap.validation.requirements.decima.SCAPSchematronHandler">
      <parameter name="datafiles_directory">classpath:data_feeds</parameter>
    </schematron-assessment>
  </assessments>
  <assertions>
    <assert-derived-requirement requirement-id="RES-391-1" result="PASS" />
    <assert-remaining quantifier="ALL" result="PASS" />
  </assertions>
</content-unit-test>
