<?xml version="1.0" encoding="UTF-8"?>
<content-unit-test xmlns="http://decima.nist.gov/xml/unit-test">
    <requirement>260</requirement>
    <description>Every xccdf:rule-result must have a xccdf:check/xccdf:check-content-ref that has attributes @href and @name
        One exception is when the referenced &lt;xccdf:Rule&gt; contains @multi-check=false(the default) and has no @name.
    </description>
    <template xmlns="http://csrc.nist.gov/ns/decima/template/1.0"
              xmlns:ds="http://scap.nist.gov/schema/scap/source/1.2"
              xmlns:oval-def="http://oval.mitre.org/XMLSchema/oval-definitions-5"
              xmlns:xccdf="http://checklists.nist.gov/xccdf/1.2"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" template="classpath:scap-1.3/templates/result-base.xml">

        <replace xpath="//xccdf:rule-result[@idref='xccdf_gov.nist_rule_test_rule1']/xccdf:check/xccdf:check-content-ref">
            <xccdf:check-content-ref href="#oval-res1"/>
        </replace>

        <replace xpath="//xccdf:Rule[@id='xccdf_gov.nist_rule_test_rule1']/xccdf:check/xccdf:check-content-ref">
            <xccdf:check-content-ref href="#oval-res1"/>
        </replace>

        <add-attribute xpath="//xccdf:Rule[@id='xccdf_gov.nist_rule_test_rule1']/xccdf:check" name="multi-check" value="true"/>

    </template>
    <assessments>
        <schematron-assessment ruleset="classpath:rules/scap/result-data-stream-1.3.sch"
                               handler-class="gov.nist.secauto.scap.validation.decima.requirements.SCAPSchematronHandler"/>
    </assessments>
    <assertions>
        <assert-derived-requirement requirement-id="RES-260-1" result="FAIL"/>
        <!-- expect 126-5 to fail since it checks for @name as well -->
        <assert-derived-requirement requirement-id="RES-126-5" result="FAIL"/>
        <!-- also expect RES-258-1 to fail which will result in an expected warning to the user -->
        <assert-derived-requirement requirement-id="RES-258-1" result="FAIL"/>
        <assert-derived-requirement requirement-id="RES-366-1" result="FAIL"/>
        <assert-remaining quantifier="ALL" result="PASS"/>
    </assertions>
</content-unit-test>
