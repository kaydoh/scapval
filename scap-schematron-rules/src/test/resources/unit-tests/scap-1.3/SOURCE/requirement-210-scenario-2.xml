<?xml version="1.0" encoding="UTF-8"?>
<content-unit-test xmlns="http://decima.nist.gov/xml/unit-test">
  <requirement>210</requirement>
  <description></description>
  <template xmlns="http://csrc.nist.gov/ns/decima/template/1.0"
  xmlns:cpe-dict="http://cpe.mitre.org/dictionary/2.0"
  xmlns:ds="http://scap.nist.gov/schema/scap/source/1.2"
  xmlns:oval-def="http://oval.mitre.org/XMLSchema/oval-definitions-5"
  xmlns:xccdf="http://checklists.nist.gov/xccdf/1.2"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" template="classpath:scap-1.3/templates/configuration-single-data-stream-base.xml">
    <insert-child xpath="//oval-def:definition[@id = 'oval:org.mitre.oval:def:5653']//oval-def:criteria">
      <oval-def:extend_definition comment="Microsoft Internet Explorer 7 is installed" definition_ref="oval:org.mitre.oval:def:5667" />
    </insert-child>
    <modify-attribute value="vulnerability" xpath="//oval-def:definition[@id = 'oval:org.mitre.oval:def:5667']/@class" />
  </template>
  <assessments>
    <schematron-assessment ruleset="classpath:rules/scap/source-data-stream-1.3.sch" handler-class="gov.nist.secauto.scap.validation.decima.requirements.SCAPSchematronHandler">
      <parameter name="datafiles_directory">classpath:data_feeds</parameter>
    </schematron-assessment>
  </assessments>
  <assertions>
    <assert-derived-requirement requirement-id="SRC-210-1" result="FAIL" />
    <!--  Also expect 213-1 and 214-1 to fail since we are modifying the class 
          to vulnerability just for this test without satisfying some vulnerability class reqs-->
    <assert-derived-requirement requirement-id="SRC-213-1" result="FAIL" />
    <assert-derived-requirement requirement-id="SRC-214-1" result="FAIL" />
    <assert-remaining quantifier="ALL" result="PASS" />
  </assertions>
</content-unit-test>
