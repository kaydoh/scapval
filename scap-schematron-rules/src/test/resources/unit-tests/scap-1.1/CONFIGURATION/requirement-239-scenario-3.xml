<?xml version="1.0" encoding="UTF-8"?>
<content-unit-test xmlns="http://decima.nist.gov/xml/unit-test">
  <requirement>239</requirement>
  <description>This is a minimal valid schema for the Configuration use case. CPE inventory doesn't have a definition of inventory</description>
  <template xmlns="http://csrc.nist.gov/ns/decima/template/1.0"
  xmlns:ds="http://scap.nist.gov/schema/data-stream/0.2"
  xmlns:oval-def="http://oval.mitre.org/XMLSchema/oval-definitions-5"
  xmlns:xccdf="http://checklists.nist.gov/xccdf/1.1"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" template="classpath:scap-1.1/templates/configuration-use-case-base.xml">
    <delete xpath="/ds:data-stream[1]/ds:check-system-content[2]/oval-def:oval_definitions[1]/oval-def:definitions[1]/oval-def:definition[1]" />
  </template>
  <assessments>
    <schematron-assessment ruleset="classpath:rules/scap/source-data-stream-1.1.sch" handler-class="gov.nist.scap.validation.requirements.decima.SCAPSchematronHandler" phase="CONFIGURATION">
      <parameter name="datafiles_directory">classpath:data_feeds</parameter>
    </schematron-assessment>
  </assessments>
  <assertions>
    <assert-derived-requirement requirement-id="SRC-239-2" result="FAIL" />
    <!-- Also expect several other tests to fail due to removing the oval definition for this test  -->
    <assert-derived-requirement requirement-id="SRC-72-1" result="FAIL" />
    <assert-derived-requirement requirement-id="SRC-73-1" result="FAIL" />
    <assert-derived-requirement requirement-id="SRC-273-1" result="FAIL" />
    <assert-derived-requirement requirement-id="SRC-112-1" result="FAIL" />
    <assert-remaining quantifier="ALL" result="PASS" />
  </assertions>
</content-unit-test>
