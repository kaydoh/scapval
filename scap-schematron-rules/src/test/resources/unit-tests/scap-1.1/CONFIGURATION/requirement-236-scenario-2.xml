<?xml version="1.0" encoding="UTF-8"?>
<content-unit-test xmlns="http://decima.nist.gov/xml/unit-test">
  <requirement>236</requirement>
  <description>This is a minimal valid schema for the Configuration use case. References OVAL compliance definition but doesn't have xccdf benchmark.</description>
  <template xmlns="http://csrc.nist.gov/ns/decima/template/1.0"
  xmlns:ds="http://scap.nist.gov/schema/data-stream/0.2"
  xmlns:oval-def="http://oval.mitre.org/XMLSchema/oval-definitions-5"
  xmlns:xccdf="http://checklists.nist.gov/xccdf/1.1"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" template="classpath:scap-1.1/templates/configuration-use-case-base.xml">
    <delete xpath="/ds:data-stream//ds:xccdf-content" />
  </template>
  <assessments>
    <schematron-assessment ruleset="classpath:rules/scap/source-data-stream-1.1.sch" handler-class="gov.nist.secauto.scap.validation.decima.requirements.SCAPSchematronHandler" phase="CONFIGURATION">
      <parameter name="datafiles_directory">classpath:data_feeds</parameter>
    </schematron-assessment>
  </assessments>
  <assertions>
    <assert-derived-requirement requirement-id="SRC-236-1" result="FAIL" />
    <assert-remaining quantifier="ALL" result="PASS" />
  </assertions>
</content-unit-test>
