<?xml version="1.0" encoding="UTF-8"?>
<content-unit-test xmlns="http://decima.nist.gov/xml/unit-test">
  <requirement>40</requirement>
  <description> xccdf:Rule element referenced does NOT have have a corresponding xccdf:rule-result.</description>
  <template xmlns="http://csrc.nist.gov/ns/decima/template/1.0" 
            xmlns:ds="http://scap.nist.gov/schema/data-stream/0.2" 
            xmlns:oval-def="http://oval.mitre.org/XMLSchema/oval-definitions-5" 
            xmlns:xccdf="http://checklists.nist.gov/xccdf/1.1" 
            xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
            template="classpath:scap-1.1/templates/results-base-compliance.xml">

    <modify-attribute xpath="//*:rule-result/@idref" value="test_rule5" />

  </template>
  <assessments>
    <schematron-assessment ruleset="classpath:rules/scap/result-data-stream-1.1.sch" handler-class="gov.nist.scap.validation.requirements.decima.SCAPSchematronHandler">
      <parameter name="datafiles_directory">classpath:data_feeds</parameter>
    </schematron-assessment>
  </assessments>
  <assertions>
    <assert-derived-requirement requirement-id="RES-40-1" result="FAIL" />
    <!-- Also expect 43 to fail since the rule-result idref does not match the Rule-->
    <assert-derived-requirement requirement-id="RES-43-1" result="FAIL" />
    <assert-remaining quantifier="ALL" result="PASS" />
  </assertions>
</content-unit-test>
