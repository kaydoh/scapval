<?xml version="1.0" encoding="UTF-8"?>
<content-unit-test xmlns="http://decima.nist.gov/xml/unit-test">
  <requirement>10</requirement>
  <description>This is a comprehensively valid xccdf for the Configuration use case. xccdf:Profile missing xccdf:description with xml:lang="en-US"</description>
  <template xmlns="http://csrc.nist.gov/ns/decima/template/1.0"
  xmlns:ds="http://scap.nist.gov/schema/data-stream/0.2"
  xmlns:xccdf="http://checklists.nist.gov/xccdf/1.1"
  xmlns:xhtml="http://www.w3.org/1999/xhtml"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" template="classpath:scap-1.1/templates/configuration-use-case-complete.xml">
    <delete xpath="//xccdf:description/@xml:lang" />
    <add-attribute name="lang" value="en-US" ns="http://www.w3.org/XML/1998/namespace" xpath="//xccdf:description" />
    <insert-sibling xpath="//xccdf:description">
      <xccdf:description xml:lang="ja-JP">
        <xhtml:strong>???</xhtml:strong>
      </xccdf:description>
    </insert-sibling>
    <delete xpath="/ds:data-stream//xccdf:Benchmark//xccdf:Profile/xccdf:description/@xml:lang" />
  </template>
  <assessments>
    <schematron-assessment ruleset="classpath:rules/scap/source-data-stream-1.1.sch" handler-class="gov.nist.scap.validation.requirements.decima.SCAPSchematronHandler">
      <parameter name="datafiles_directory">classpath:data_feeds</parameter>
    </schematron-assessment>
  </assessments>
  <assertions>
    <assert-derived-requirement requirement-id="SRC-10-1"
      result="FAIL" />
    <assert-remaining quantifier="ALL" result="PASS" />
  </assertions>
</content-unit-test>
