<?xml version="1.0" encoding="UTF-8"?>
<content-unit-test xmlns="http://decima.nist.gov/xml/unit-test">
  <requirement>224</requirement>
  <description>This is a comprehensively valid xccdf for the vulnerability use case.
               @system attribute for a CVE's xccdf:ident is unknown  </description>
  <template xmlns="http://csrc.nist.gov/ns/decima/template/1.0"
  xmlns:ds="http://scap.nist.gov/schema/data-stream/0.2"
  xmlns:xccdf="http://checklists.nist.gov/xccdf/1.1"
  xmlns:cpe="http://cpe.mitre.org/dictionary/2.0"
  xmlns:xhtml="http://www.w3.org/1999/xhtml"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" template="classpath:scap-1.1/templates/vulnerability-xccdf-use-case-base.xml">
    <insert-sibling xpath="//*:Rule[@id='test_rule1']">
      <Rule id="test_rule2" selected="false" weight="10.0" xmlns="http://checklists.nist.gov/xccdf/1.1">
        <title>Test Title for Rule 1</title>
        <description>Test Description for Rule 1</description>
        <ident system="unknown">CVE-1999-0002</ident>
        <check system="http://oval.mitre.org/XMLSchema/oval-definitions-5">
         <check-content-ref href="minimal-oval.xml" name="oval:gov.nist.test.vulnerability:def:1" />
        </check>
     </Rule>
    </insert-sibling>
    <delete xpath="//*:Rule[@id='test_rule1']" />
  </template>
  <assessments>
    <schematron-assessment ruleset="classpath:rules/scap/source-data-stream-1.1.sch" handler-class="gov.nist.scap.validation.requirements.decima.SCAPSchematronHandler">
      <parameter name="datafiles_directory">classpath:data_feeds</parameter>
    </schematron-assessment>
  </assessments>
  <assertions>
    <assert-derived-requirement requirement-id="SRC-224-1" result="FAIL" />
    <!-- Also, expect 251-1 to fail because xccdf:Rule should include an xccdf:ident containing a CVE, CCE, or CPE -->
    <assert-derived-requirement requirement-id="SRC-251-1" result="FAIL" />
    <!-- Also, expect 251-2 to fail because xccdf:Rule xccdf:ident and corresponding oval class dont match -->
    <assert-derived-requirement requirement-id="SRC-251-2" result="FAIL" />
    <assert-remaining quantifier="ALL" result="PASS" />
  </assertions>
</content-unit-test>
