<?xml version="1.0" encoding="UTF-8"?>
<content-unit-test xmlns="http://decima.nist.gov/xml/unit-test">
  <requirement>5</requirement>
  <description>This is a minimal valid schema for the Configuration use case. The status element is specified to be "accepted"</description>
  <template xmlns="http://csrc.nist.gov/ns/decima/template/1.0"
  xmlns:ds="http://scap.nist.gov/schema/data-stream/0.2"
  xmlns:xccdf="http://checklists.nist.gov/xccdf/1.1"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" template="classpath:scap-1.1/templates/configuration-use-case-base.xml">
    <replace xpath="/ds:data-stream/ds:xccdf-content/xccdf:Benchmark/xccdf:status">
      <xccdf:status date="2009-12-01">accepted</xccdf:status>
    </replace>
  </template>
  <assessments>
    <schematron-assessment ruleset="classpath:rules/scap/source-data-stream-1.1.sch" handler-class="gov.nist.secauto.scap.validation.decima.requirements.SCAPSchematronHandler">
      <parameter name="datafiles_directory">classpath:data_feeds</parameter>
    </schematron-assessment>
  </assessments>
  <assertions>
    <assert-derived-requirement requirement-id="SRC-5-1" result="PASS" />
    <assert-derived-requirement requirement-id="SRC-5-2" result="PASS" />
    <assert-remaining quantifier="ALL" result="PASS" />
  </assertions>
</content-unit-test>
