<?xml version="1.0" encoding="UTF-8"?>
<content-unit-test xmlns="http://decima.nist.gov/xml/unit-test">
  <requirement>112</requirement>
  <description>This is a comprehensively valid xccdf for the Configuration use case. 
              cpe dictionary references an oval inventory class definition not specified in the cpe-oval</description>
  <template xmlns="http://csrc.nist.gov/ns/decima/template/1.0" 
            xmlns:ds="http://scap.nist.gov/schema/data-stream/0.2" 
            xmlns:xccdf="http://checklists.nist.gov/xccdf/1.1" 
            xmlns:cpe="http://cpe.mitre.org/dictionary/2.0" 
            xmlns:xhtml="http://www.w3.org/1999/xhtml"
            xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
            template="classpath:scap-1.1/templates/configuration-use-case-base.xml">
    
    <insert-sibling xpath="//*:cpe-item[1]">
      <cpe-item name="cpe:/o:microsoft:windows_vista" xmlns="http://cpe.mitre.org/dictionary/2.0">
        <title>Microsoft Windows Vista</title>
        <check href="minimal-cpe-oval.xml" system="http://oval.mitre.org/XMLSchema/oval-definitions-5">oval:gov.nist.test.inventory:def:2</check>
      </cpe-item>
    </insert-sibling>
  
  </template>
  <assessments>
    <schematron-assessment ruleset="classpath:rules/scap/source-data-stream-1.1.sch" handler-class="gov.nist.secauto.scap.validation.decima.requirements.SCAPSchematronHandler">
      <parameter name="datafiles_directory">classpath:data_feeds</parameter>
    </schematron-assessment>
  </assessments>
  <assertions>
    <assert-derived-requirement requirement-id="SRC-112-1" result="FAIL" />
    <!-- Also, expect a few more tests to fail due to the oval def not existing for the CPE check -->
    <assert-derived-requirement requirement-id="SRC-72-1" result="FAIL" />
    <assert-derived-requirement requirement-id="SRC-73-1" result="FAIL" />
    <assert-derived-requirement requirement-id="SRC-273-1" result="FAIL" />
    <assert-remaining quantifier="ALL" result="PASS" />
  </assertions>
</content-unit-test>
